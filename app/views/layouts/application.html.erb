<!DOCTYPE html>
<html>
  <head>
    <title>Ringley</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default text-center">
      <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
        <div class="col-sm-12 col-md-3 col-lg-3">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#my-navbar" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "Ringley", root_path, id: "brand" %>
          </div>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="my-navbar">
          <div class="col-md-5">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to "See All Documents", documents_path %>
              </li>
              <% if user_signed_in? && current_user.admin? %>
              <li>
                <%= link_to "Upload a Document", new_document_path, class: 'btn btn-primary' %>
              </li>
              <% end %>
            </ul>
          </div>

          <ul class="nav navbar-nav navbar-right">

          <% if !user_signed_in? %>
              <li>
                <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %>
              </li>
              <li>
                <%= link_to "Sign In", new_user_session_path %>
              </li>
          <% else %>
              <li>
                <%= current_user.email %>
              </li>
              <li>
                <%= link_to("Sign Out", destroy_user_session_path, method: :delete) %>
              </li>
          <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <!-- Alerts -->
    <%= render "layouts/alerts" %>

    <%= yield %>
  </body>
</html>
