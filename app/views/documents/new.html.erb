<div class="booyah-box col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 clear">
<h2>Add New Document</h2>
<br>
<%= simple_form_for @document, url: documents_path do |f| %>

  <div class="form-inputs">
    <%= f.input :title, required: true, autofocus: true %>
    <%= f.input :file, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Upload" %>
  </div>
<% end %>
</div>